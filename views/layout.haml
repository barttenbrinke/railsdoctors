%html{"xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en", "lang" => "en"}
  %head
    %title= @title
    %link{:rel => "stylesheet", :href => "css/stylesheet.css", :type => "text/css", :media => "screen"}
    %script{:type => "text/javascript", :src  => "javascripts/cufon-yui.js"}
    %script{:type => "text/javascript", :src  => "javascripts/CartoGothic_Std_400-CartoGothic_Std_700-CartoGothic_Std_italic_400-CartoGothic_Std_italic_700.font.js"}
    :javascript
      Cufon.replace('h1')('h2')('h4')('p');

  %body
    #wrapper
      #header
        %ul{:id => "nav"}
          %li{:id => "first"}
            %a{:title => 'Home', :href => 'index.html'} Home
          %li
            %a{:title => 'Blog', :href => 'blog.html'} Blog
          %li
            %a{:title => 'Performance', :href => 'performance.html'} Performance
          %li
            %a{:title => 'Security', :href => 'security.html'} Security
          %li
            %a{:title => 'Contact us', :href => 'contact.html'} Contact
        
        %img{:id=> "logo", :src => "images/rails_doctors_logo.png", :alt => "Rails doctors - we scratch your itch!"}

        %h2= @tagline

        .clearfix
      #content= yield
      
    #footer
      .inner
        %a{:href => "performance.html"}
          %img{:src => "images/performance_train.png", :alt=>"Performance train"}
        %a{:href => "security.html"}
          %img{:src => "images/lock.png", :alt=>"security"}
        %a{:href => "request_log_analyzer.html"}
          %img{:src => "images/rla.png", :alt=>"request log analyzer"}
        %a{:href => "contact.html"}
          %img{:src => "images/contact.png", :alt=>"contact", :class => "right"}
        %p
          %a{:href => "performance.html"} Performance
        %p
          %a{:href => "security.html"} Security
        %p
          %a{:href => "request_log_analyzer.html"} Request Log Analyzer
        %p{:class => "right"}
          %a{:href => "contact.html"} Contact
        .clearfix
        .credits{:class => "left"}
          Copyright <span class="o">Railsdoctors</span> 2009
        .credits{:class => "right"}
          Layout by <a href="http://john.onolan.org">John <span class="o">O No!</span>an</a>

